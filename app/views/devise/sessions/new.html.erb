<div><%=notice%></div>
<div id="login" class="bottom-three ">
  <!-- <h3 class="text-center text-white pt-5">Login form</h3> -->
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center ">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12 ">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form" , id: "login-form" ) do |f| %>
            <h3 class="text-center text-info">Login</h3>
            <div class="form-group">
              <label for="username" class="text-info">Email:</label><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , id: "username"  %>
            </div>
            <div class="form-group">
              <label for="password" class="text-info">Password:</label><br>
              <%= f.password_field :password, autocomplete: "current-password" %> <br>
            </div>
            <div class="form-group">
              <%= link_to "#{t 'global.forgotPassword'}", new_password_reset_path, class: "text-info " %>
            </div>
            <div class="form-group">
              <label for="remember-me" class="text-info"><%= t 'global.remember' %> </label>
              <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me, id: "remember-me" %>
              <% end %>
            </div>
            <div>
              <%= f.submit "Submit", class: "btn btn-info btn-md"%>
              <%= link_to "#{t 'layout._navbarForm.register'}", new_user_registration_path , class: "text-info register"  %>
            </div>

          <% end %>

          <p>

          </p>

          <!--
            <div id="register-link" >
              <a href="#" class="text-info">Register here</a>
              <%= link_to "#{t 'layout._navbarForm.register'}", new_user_registration_path , class: "text-info" %>
            </div>
           -->
        </div>
      </div>
    </div>
  </div>
</div>
